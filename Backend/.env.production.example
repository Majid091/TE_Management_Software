# Application
NODE_ENV=production
PORT=3000
APP_NAME=TE Management Software
API_PREFIX=api

# Database - Use a cloud PostgreSQL provider (Neon, Supabase, Railway, etc.)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# JWT - GENERATE NEW SECRETS FOR PRODUCTION
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_production_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_production_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Your frontend production URL
CORS_ORIGIN=https://your-frontend-url.vercel.app
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=50

# Logging
LOG_LEVEL=warn
